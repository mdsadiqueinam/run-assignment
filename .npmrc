# Enable hoisting for better dependency management
hoist=true
hoist-pattern[]=*

# Auto install peer dependencies
auto-install-peers=true

# Use strict peer dependencies
strict-peer-dependencies=false

# Enable workspace protocol
link-workspace-packages=true

# Shamefully hoist to avoid issues with some packages
shamefully-hoist=true

# Save exact versions
save-exact=true

# Enable shell emulator for Windows compatibility
shell-emulator=true

# Node linker
node-linker=isolated
